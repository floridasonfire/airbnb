<h1>Properties</h1>

<div class="row">
  <% @properties.each do |property| %>
    <div class="col-sm-3 property-info">
      <% user = User.find(property.owner_id) %>
      <%=link_to( image_tag(property.avatar.url(:thumb)), user_property_path(user, property)) %>
      <h5>Owner: <%= user.username %></h5>
      <h5><%= property.address %></h5>
      <h5>Price: <%= property.price %></h5>
      <% if current_user.admin || current_user = user %>
        <%= link_to "Remove Listing", user_property_path(user, property),
                                      :data => {:confirm => "Are you sure?",
                                        :method => 'delete'}%>
      <% end %>
    </div>
  <% end %>
</div>
